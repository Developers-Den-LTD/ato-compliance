{
  "name": "ato-compliance",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently -n db,backend,frontend -c yellow,blue,green \"docker-compose up\" \"pnpm run backend:dev\" \"pnpm run frontend:dev\"",
    "build": "npm run build --workspaces",
    "backend:dev": "npm run dev -w apps/backend",
    "frontend:dev": "npm run dev -w packages/frontend",
    "stop": "docker-compose down",
    "db:start": "docker-compose up -d",
    "db:stop": "docker-compose down"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "typescript": "^5.6.3"
  }
}
